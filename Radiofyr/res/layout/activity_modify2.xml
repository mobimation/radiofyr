<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beacon_station"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/rfyrConfig"
                android:textColor="#70554E"
                android:textSize="21sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/proxUUID"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/uuidhi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@drawable/rounded_textfield"
                        android:contentDescription="@string/proxUUID"
                        android:digits="0123456789ABCDEF"
                        android:ems="10"
                        android:inputType="text"
                        android:labelFor="@id/uuidhi"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:text="@string/hiUUID"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <EditText
                        android:id="@+id/uuidlo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@drawable/rounded_textfield"
                        android:contentDescription="@string/proxUUID"
                        android:digits="0123456789ABCDEF"
                        android:ems="10"
                        android:inputType="text"
                        android:labelFor="@id/uuidlo"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:text="@string/loUUID"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWriteUUID"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:baselineAligned="false" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:baselineAligned="false"
                    android:contentDescription="@string/majorno"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/majorno"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/major"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@drawable/rounded_textfield"
                        android:contentDescription="@string/majorno"
                        android:inputType="numberDecimal"
                        android:labelFor="@id/major"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:text="@string/defaultmajor"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWriteMajor"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:baselineAligned="false" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minorno"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/minor"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@drawable/rounded_textfield"
                        android:contentDescription="@string/minorno"
                        android:inputType="numberDecimal"
                        android:labelFor="@id/minor"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:text="@string/defaultminor"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWriteMinor"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:baselineAligned="false" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:baselineAligned="false"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txPower"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerTxPower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/beaconTxPower"
                        android:entries="@array/power_settings"
                        android:prompt="@string/txPower" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWriteTXPower"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="@string/save"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/advinterval"
                        android:text="@string/advinterval"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/advInterval"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:background="@drawable/rounded_textfield"
                        android:contentDescription="@string/advinterval"
                        android:inputType="numberDecimal"
                        android:labelFor="@id/advInterval"
                        android:paddingBottom="0dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:text="@string/defaultadvint"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWriteAdvInterval"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/fgscanwait"
                        android:text="@string/fgscanwait"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/fgScanPeriod"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="@drawable/rounded_textfield"
                            android:contentDescription="@string/hintfgscanperiod"
                            android:inputType="numberDecimal"
                            android:labelFor="@id/fgScanPeriod"
                            android:paddingBottom="0dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:text="@string/defaultfgscan"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/fgWaitPeriod"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="@drawable/rounded_textfield"
                            android:contentDescription="@string/hintfgwaitperiod"
                            android:inputType="numberDecimal"
                            android:labelFor="@id/fgWaitPeriod"
                            android:paddingBottom="0dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:text="@string/defaultfgwait"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonFgWriteScanPeriod"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/bgscanwait"
                        android:text="@string/bgscanwait"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/bgScanPeriod"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="@drawable/rounded_textfield"
                            android:contentDescription="@string/hintbgscanperiod"
                            android:inputType="numberDecimal"
                            android:labelFor="@id/bgScanPeriod"
                            android:paddingBottom="0dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:text="@string/defaultfgscan"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/bgWaitPeriod"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="@drawable/rounded_textfield"
                            android:contentDescription="@string/hintbgwaitperiod"
                            android:inputType="numberDecimal"
                            android:labelFor="@id/bgWaitPeriod"
                            android:paddingBottom="0dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:text="@string/defaultbgwait"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonBgWriteScanPeriod"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pwd"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="184dp"
                        android:layout_height="wrap_content"
                        android:alpha="0.7"
                        android:background="@drawable/rounded_textfield"
                        android:digits="0123456789ABCDEF"
                        android:ems="10"
                        android:hint="@string/pwdhint"
                        android:inputType="textPassword"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:text="AprilBrother"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:typeface="monospace" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonWritePassword"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="17dp"
                        android:alpha="0.7"
                        android:background="@drawable/simpleshape"
                        android:text="Spara"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

   </ScrollView>

</RelativeLayout>